package com.company.project.EndersOverFlow;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import com.company.project.EndersOverFlow.model.Member;

import com.company.project.EndersOverFlow.repository.MemberRepository;
import com.sun.org.slf4j.internal.LoggerFactory;

import ch.qos.logback.classic.Logger;
import lombok.extern.slf4j.Slf4j;
import sun.util.logging.resources.logging;

@Slf4j
@SpringBootApplication
public class EndersOverFlowApplication {
    
	Logger logger = (Logger) org.slf4j.LoggerFactory.getLogger(this.getClass());

	public static void main(String[] args) {
		SpringApplication.run(EndersOverFlowApplication.class, args);
	}

    @Bean
    public CommandLineRunner Member(MemberRepository repository) {
        return (args) -> {
        	
        	//엔티티 생성
            Member member1 = new Member("kr600001", "홍길동");
            Member member2 = new Member("kr600002", "이순신");
            Member member3 = new Member("kr600003", "세종대왕");
                  
            //엔티티 저장
            repository.save(member1);
            repository.save(member2);
            repository.save(member3);
                  
            //엔티티 조회
            for(Member m : repository.findAll()) {
            	
            }
    
            //엔티티 삭제
            repository.delete(member2);
                  
            for(Member m : repository.findAll()) {
                log.info("회원 명 : {}", m.getName());
            }
        };
}
