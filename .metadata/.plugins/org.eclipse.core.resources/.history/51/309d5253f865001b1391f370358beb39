package com.company.project.EndersOverFlow.repository;

import org.springframework.data.jpa.repository.JpaRepository; 
import org.springframework.stereotype.Repository;
import com.company.project.EndersOverFlow.model.Member;
import java.util.List; 

출처: https://goddaehee.tistory.com/209 [갓대희의 작은공간]

@Repository 
public interface MemberRepository extends JpaRepository<Member, Long> { 
	//비워있어도 잘 작동함. 
	// long 이 아니라 Long으로 작성. ex) int => Integer 같이 primitive형식 사용못함 
	// findBy뒤에 컬럼명을 붙여주면 이를 이용한 검색이 가능하다 
	public List<Member> findById(String id); 
	public List<Member> findByName(String name); 
	//like검색도 가능 
	public List<Member> findByNameLike(String keyword);
}

